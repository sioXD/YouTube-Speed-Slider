{
  "manifest_version": 3,
  "name": "YouTube Speed Slider",
  "description": "Add playback speed Slider and controls to the YouTube video player controls.",
  "version": "1.7.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "YouTube Speed Slider"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
   "browser_specific_settings": {
    "gecko": {
      "id": "youtube-speed-slider@sio.com",
      "strict_min_version": "109.0"
    }
  }
}